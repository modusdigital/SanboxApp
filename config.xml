<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns       = "http://www.w3.org/ns/widgets"
				xmlns:gap   = "http://phonegap.com/ns/1.0"
				id          = "uk.co.moduscreative.uel"
				versionCode = "10"
				version     = "1.0.1">

	<name>SandboxApp Modus</name>

	<description>
		Modus Testing App
	</description>

	<author href="http://www.modusdigital.co.uk/" email="apps@modusdigital.co.uk">
		modus digital
	</author>
	
	<preference name="orientation" value="portrait" /> 
	
	<preference name="target-device" value="universal" />
	<preference name="fullscreen" value="true" />
	<preference name="webviewbounce" value="false" />
	<preference name="disable-cursor" value="true" />
	<preference name="permissions" value="none"/>	
	<preference name="show-splash-screen-spinner" value="true" />
	
	<!-- iPhone icons -->
	<icon src="icons/icon-57.png" gap:platform="ios" width="57" height="57" />
	<icon src="icons/icon-72.png" gap:platform="ios" width="72" height="72" />
	<icon src="icons/icon-114.png" gap:platform="ios" width="114" height="114" />
	<!-- retina iPad support: PhoneGap 2.5.0+ only -->
	<icon src="icons/icon-144.png" gap:platform="ios" width="144" height="144" />
	<!-- android icons -->
	<icon src="icons/icon-72.png" gap:platform="android" gap:density="mdpi" />
	<icon src="icons/icon-114.png" gap:platform="android" gap:density="hdpi" />
	<icon src="icons/icon-144.png" gap:platform="android" gap:density="xhdpi" />
	<!-- BlackBerry icons -->
	<icon src="icons/icon-72.png" gap:platform="blackberry" />
	<icon src="icons/icon-72.png" gap:platform="blackberry" gap:state="hover"/>

	<!-- to enable individual permissions use the following examples -->
	<feature name="http://api.phonegap.com/1.0/contacts"/>
	<feature name="http://api.phonegap.com/1.0/file"/>
	<feature name="http://api.phonegap.com/1.0/geolocation"/>
	<feature name="http://api.phonegap.com/1.0/network"/>
	<feature name="http://api.phonegap.com/1.0/notification"/>
	
	<!-- database storage -->
	<plugin name="Storage" value="org.apache.cordova.Storage" />
	<feature id="blackberry.widgetcache" required="true" version="1.0.0.0" />
	
	<!-- domain feeds test -->
	<access origin="http://www.modusdigital.co.uk/" />
	<access origin="*.modusdigital.co.uk" />
	<access uri="http://www.modusdigital.co.uk/" subdomains="true" />
	<!-- domain feeds -->
	<access origin="http://www.campuscloud.co.uk/" />
	<access origin="*.campuscloud.co.uk" />
	<access uri="http://www.campuscloud.co.uk/" subdomains="true" />

	
	<access origin="https://maps.googleapis.com" />

	<access origin="http://www.google.com" />
	<access origin="https://www.googleapis.com" />
	<access origin="http://www.gstatic.com" />

	<access origin="*.google.com" />
	<access origin="*.googleapis.com" />
	<access origin="*.gstatic.com" />

	<access uri="http://www.google.com" subdomains="true" />
	<access uri="http://www.googleapis.com" subdomains="true" />
	<access uri="http://www.gstatic.com" subdomains="true" />


	
	<!-- plugins -->
	<plugin name="InAppBrowser" value="CDVInAppBrowser" /> <!-- iOS -->
	<plugin name="InAppBrowser" value="org.apache.cordova.InAppBrowser" /> <!-- Android -->
<!-- 	<gap:plugin name="com.phonegap.plugins.facebookconnect" /> -->

</widget>